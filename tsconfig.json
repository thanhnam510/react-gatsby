{
  "include": ["src/**/*", ".storybook/**/*", "scripts/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "component": ["src/components/*"],
      "root/*": ["*"]
    },
    "typeRoots": ["node_modules/@types"],
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  }
}
